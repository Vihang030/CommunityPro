                            </div>



                        </div>
                    </div>

                    @*Showing listboxes of Qualifications in posting create*@
                    <div class="form-group">
                        <div class="row">

                         <div class="col-md-4">
                                <label class="control-label">Qualifications Available</label>
                                @Html.ListBox("availQualifications", (MultiSelectList)ViewBag.availQualis, new { @class = "form-control" })
