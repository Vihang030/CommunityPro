                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SalaryTypeID, "SalaryType", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            @Html.DropDownList("SalaryTypeID", null, htmlAttributes: new { @class = "form-control" })
