<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="http://www.niagaracatholic.ca/wp-content/themes/wpbootstrap/ico/favicon.png">
    <title>Niagara Catholic District School Board</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        @Html.ActionLink("Niagara Catholic District School Board", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li>@Html.ActionLink("Browse Jobs", "Index", "Postings",null, new { @class = "nav-link active" })</li>
                <li>@Html.ActionLink("Applicants", "Index", "Applicants",null, new { @class = "nav-link active" })</li>
                <li>@Html.ActionLink("Positions", "Index", "Positions",null, new { @class = "nav-link active" })</li>
                <li class="float-right">
                    <button type="button" class="btn float-md-right" data-toggle="modal" data-target="#exampleModal">
                        <img src="~/Images/menu.png" />
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Manager Controls</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">

                                    <div class="row">
                                        <div class="col-sm-2">@Html.ActionLink("Post Job", "CreateStart", "Postings", null, new { @class = "btn btn-primary" })</div>

                                        <div class="col-sm-2 offset-2">@Html.ActionLink("Applicants", "Index", "Applicants", null, new { @class = "btn btn-primary" })</div>

                                        <div class="col-sm-2 offset-2">@Html.ActionLink("Positions", "Index", "Positions", null, new { @class = "btn btn-primary" })</div>
                                    </div>



                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
              

            </ul>
            <form class="form-inline mt-2 mt-md-0">
                @Html.Partial("_LoginPartial")
            </form>
        </div>
    </nav>


    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                @RenderBody()
            </div>
        </div>        
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
